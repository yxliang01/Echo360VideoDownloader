{
    "version": "1.0.6",
    "manifest_version": 2,

    "name": "Unimelb Recording Downloader",
    "description": "This extension allows you to download all the recordings available in the current recording download page on the LMS",
    "icons": {
        // "128": "icon128anu.png",
        // "128": "icon128monash.png",
        // "128": "icon128rmit.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_title": "Download all the recordings available in current page!",
        "default_icon": { "128": "icon128.png" },
        "default_popup": "browser_popup.html"
    },
    "permissions": [
        "activeTab",
        "downloads",
        "https://content.lecture.unimelb.edu.au/ess/echocenter/index.jsp?*",
        "notifications"
    ]

    ,
    "background": {
        "scripts": ["eventpage.js"],
        "persistent": false
    }
}
